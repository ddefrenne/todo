<div class="panel panel-default">
  <div class="{{ if allDone 'bg-success' }} panel-heading">
    <span id="tasks-remaining">{{remaining}} {{inflection}} remaining.</span>
  </div>

  <div class="panel-body">
    <ul id="tasks-list" class="list-group">
      {{#each task in model itemController='task'}}
      <li class="list-group-item {{ if task.isCompleted 'completed' }}">
          <div class="row">
            {{#link-to "tasks.show" task.model}}
              <div class="task-description col-md-10 col-sm-10 col-xs-10">
                <span>{{task.model.description}}</span>
              </div>
            {{/link-to}}
            <div class="task-actions col-md-2 col-sm-2 col-xs-2">
              <div class="pull-right">
                <button class="btn btn-danger btn-xs"
                        type="button"
                        id="delete-task"
                        {{action "removeTask"}}>
                        <i class="fa fa-trash-o fa-lg"></i>
                </button>
                {{#unless task.isCompleted}}
                  <button class="btn btn-success btn-xs"
                          type="button"
                          id="complete-task"
                          {{action "completeTask"}}>
                          <i class="fa fa-check fa-xs"></i>
                  </button>
                {{/unless}}
              </div>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>
